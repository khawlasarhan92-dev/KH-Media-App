# Backend environment example (copy to .env and fill real values)
# Do NOT commit your real .env to git

# App
NODE_ENV=development
PORT=8000

# Database
DB=your_mongodb_connection_string

# JWT
JWT_SECRET=replace_with_a_strong_secret
JWT_EXPIRES_IN=90d
JWT_COOKIE_EXPIRES_IN=90

# Cloudinary (optional)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Email / SMTP (Mailtrap example for local testing)
# If you want to use Mailjet/SendGrid in production, leave these blank and set MAILJET_API_KEY/SECRET
SMTP_HOST=sandbox.smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_mailtrap_username
SMTP_PASS=your_mailtrap_password
EMAIL=you@yourproject.test

# Mailjet (optional) - uncomment if you use Mailjet HTTP API
#MAILJET_API_KEY=
#MAILJET_API_SECRET=

# Control sending (demo mode)
SEND_EMAILS=false
EMAIL_MAX_RETRIES=2

